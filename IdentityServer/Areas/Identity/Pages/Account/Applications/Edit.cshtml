@page "{id?}"
@model IdentityServer.Areas.Identity.Pages.Account.Applications.EditModel
@{
    ViewData["Title"] = "Editar Aplicación";
}


<div class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        <h2 class="m-0 text-dark">@ViewData["Title"]</h2>
        </div><!-- /.col -->
        <div class="col-sm-6">
        <div class="float-sm-end">
           <a id="back-to-list" class="btn btn-primary" asp-area="Identity" asp-page="/Account/Applications/Index">Listado</a>
        </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 margin-tb">

                <div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Datos</h3>
  </div>
  <div class="card-body">
     <form id="editForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.ClientId" class="form-control" autocomplete="name" aria-required="true" readonly />
            <label asp-for="Input.ClientId"></label>
            <span asp-validation-for="Input.ClientId" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.DisplayName" class="form-control" autocomplete="normalizedName" aria-required="true" />
            <label asp-for="Input.DisplayName"></label>
            <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.RedirectUris" class="form-control" autocomplete="normalizedName" aria-required="true" />
            <label asp-for="Input.RedirectUris"></label>
            <span asp-validation-for="Input.RedirectUris" class="text-danger"></span>
        </div>

         <div class="form-floating">
            <input asp-for="Input.LogoutUris" class="form-control" autocomplete="normalizedName" aria-required="true" />
            <label asp-for="Input.LogoutUris"></label>
            <span asp-validation-for="Input.LogoutUris" class="text-danger"></span>
        </div>
        <div class="card-footer">
            <div class="actions">
                <button id="updateSubmit" type="submit" class="btn btn-primary">Actualizar</button>
                <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Applications/Index">Cancelar</a>
            </div>
        </div>

     </form>
   </div>
</div>



            </div>
        </div>
    </div>
</div>
